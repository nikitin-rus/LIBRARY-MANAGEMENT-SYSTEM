<Page x:Class="LIBRARY_MANAGEMENT_SYSTEM.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LIBRARY_MANAGEMENT_SYSTEM.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Вход в систему">
    <StackPanel>
        <TextBlock>Введите логин:</TextBlock>
        <TextBox x:Name="LoginTextBox">test_login1</TextBox>
        
        <TextBlock>Введите пароль:</TextBlock>
        <PasswordBox x:Name="MyPasswordBox" Password="test_password"/>

        <Button x:Name="LoginUserBtn" 
                Click="LoginUserBtn_Click" 
                Content="Войти"/>
    </StackPanel>
</Page>
